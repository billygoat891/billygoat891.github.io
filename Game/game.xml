<Mars_App xmlns="x-schema:../Common/Schema.xml">
<!-- the "Panels" tag contains all panels that you wish to use -->

   <Panels>
<!-- BUGBUG dummy panel to get home page at start of travel log -->
      <Panel Create="OnLoad" Trusted="true">
        <Name>Start</Name>
        <Layout>
           <Position>Top</Position>
           <Height>0</Height>
        </Layout>
        <StartUrl>%windir%/Activity/game/start.htm</StartUrl>
      </Panel>

<!-- Navbar Panel Definition -->
      <Panel Create="OnLoad" Trusted="true">
         <Name>NavBar</Name>
         <Layout>
            <Position>Top</Position>
            <Height>40</Height>
         </Layout>
         <StartUrl>%windir%/Activity/game/navbar.htm</StartUrl>
      </Panel>

<!-- Home Panel Definition -->
      <Panel Create="OnLoad" Trusted="true">
        <Name>HomeCurrent</Name>
        <Layout>
            <Position>window</Position>
        </Layout>
        <StartUrl>%windir%/Activity/game/home.htm</StartUrl>
      </Panel>   
      
<!-- GameTips Panel Definition -->
      <Panel Create="OnLoad" Trusted="true">
        <Name>GameTips</Name>
        <Layout>
            <Position>window</Position>
        </Layout>
        <StartUrl>%windir%/Activity/game/GameTips.htm</StartUrl>
      </Panel>

<!-- OnlineGaming Panel Definition -->
      <Panel Create="OnLoad" Trusted="false">
        <Name>OnlineGaming</Name>
        <Layout>
            <Position>window</Position>
        </Layout>
        <StartUrl>http://zone.msn.com</StartUrl>
      </Panel>

<!-- GameManager Panel Definition -->
      <Panel Create="OnLoad" Trusted="true">
        <Name>DeleteLRU</Name>
        <Layout>
            <Position>window</Position>
        </Layout>
        <StartUrl>%windir%/Activity/game/gameDelete.htm</StartUrl>
      </Panel>
      
   </Panels>

<!-- places describes which panels are initially made visible -->

   <Places>
<!-- BUGBUG dummy page to get Home page at start of travel log -->
    <Place>
         <Name>Start</Name>
         <PlacePanel>
            <Name>Start</Name>
         </PlacePanel>
    </Place>

<!-- Home Current Place Definition -->
    <Place>
         <Name>Home</Name>
         <PlacePanel>
            <Name>NavBar</Name>
         </PlacePanel>
         <PlacePanel>
            <Name>HomeCurrent</Name>
         </PlacePanel>
    </Place>
       
<!-- GameTips Place Definition -->
    <Place>
         <Name>Game Tips</Name>
         <PlacePanel>
            <Name>NavBar</Name>
         </PlacePanel>
         <PlacePanel>
            <Name>GameTips</Name>
         </PlacePanel>
    </Place>
<!-- OnlineGaming Place Definition -->
    <Place>
         <Name>Online Gaming</Name>
         <PlacePanel>
            <Name>NavBar</Name>
         </PlacePanel>
         <PlacePanel>
            <Name>OnlineGaming</Name>
         </PlacePanel>
    </Place>
<!-- Uninstall Place Definition -->
    <Place>
         <Name>Delete</Name>
         <PlacePanel>
            <Name>NavBar</Name>
         </PlacePanel>
         <PlacePanel>
            <Name>DeleteLRU</Name>
         </PlacePanel>
    </Place>
   </Places>
</Mars_App>
